{{#if addNewQuestion}}
  <h2>Add a Question</h2>
    <form>
      <div class="form-group">
        {{input value=author id="author" placeholder="Name"}}
      </div>

      <div class="form-group">
        {{input value=question id="question" placeholder="Question"}}
      </div>

      <div class="form-group">
        {{input value=notes id="notes" placeholder="Details"}}
      </div>

      <button {{action 'save'}}>Save</button>
    </form>
 {{else}}
    <button {{action 'questionFormShow'}}>Add Question</button>
{{/if}}
